# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       Ui.index
GET     /ui/createAccount                       Ui.createAccount
GET     /ui/securityQuestions                   Ui.SecurityQuestions
GET     /ui/validateUsername                    Ui.validateUsername
GET     /ui/providers                           Ui.listProviders

GET     /accounts                               Accounts.list
GET     /testclient                             TestClient.index
GET     /testclient/base64sha1hash              TestClient.HashSha1Base64FromBytes
GET     /tokens/{token}                         Tokens.validateToken

GET     /users                                  Users.list
GET     /users/{username}/token                 Users.getUserToken

GET     /testapi/images/{imgId}                 Ui.testApiHandler

POST     /accounts                              Accounts.addAccount
PUT      /accounts/{accountId}                  Accounts.editAccount
POST     /users                                 Users.addUser
PUT      /users/{username}                      Users.editUser

GET      /oauthtest                             OauthTest.test
GET      /oauth_callback                        OauthTest.callback

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
