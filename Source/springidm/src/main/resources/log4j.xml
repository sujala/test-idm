<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%c] %m %X{GUUID} %n"/>
		</layout>
	</appender>

    <!--<appender name="file" class="org.apache.log4j.-->

	<appender name="file" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="/var/log/idm/id/var/log/idm/idm.log.%d.zip"/>
            <param name="activeFileName" value="/var/log/idm/idm.log"/>
        </rollingPolicy>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss z} %-5p [%c] %m %X{GUUID} %n"/>
		</layout>
	</appender>
	
	<appender name="audit" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="/var/log/idm/audit.log.%d.zip"/>
            <param name="activeFileName" value="/var/log/idm/audit.log.log"/>
        </rollingPolicy>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss z} %m %n"/>
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="com.rackspace.idm">
		<level value="info" />
	</logger>
	
	<logger name="audit" additivity="false">
		<appender-ref ref="audit" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>

	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>

	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>
	
	<logger name="org.jboss.resteasy.springmvc">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="file" />
	</root>

</log4j:configuration>
