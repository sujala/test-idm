<?xml version="1.0" encoding="UTF-8"?>
<!-- To configure Repose see: http://wiki.openrepose.org/display/REPOSE/Configuration -->
<system-model xmlns="http://docs.openrepose.org/repose/system-model/v2.0">

  <repose-cluster id="identity" rewrite-host-header="false">

    <nodes>
        <node id="repose_node1" hostname="localhost" http-port="8080"/>
    </nodes>
    <filters>
      <!-- Need to create whitelist regex for this. For now just exclude fed calls -->
      <filter name="rackspace-auth-user" uri-regex="(?:^.*/v2\.0/tokens(?:/)?$)|(?:^.*/v1\.1/auth(?:/)?$)|(?:^.*/v1\.1/auth-admin(?:/)?$)" />
      <filter name="header-translation" />
      <filter name="ip-user" />
      <filter name="uri-user" />
      <filter name="slf4j-http-logging" />
      <filter name="rate-limiting" />
      <filter name="cors"/>
      <filter name="content-type-stripper" />
      <filter name="translation" />
      <filter name="scripting" />
      <filter name="herp" />
      <!-- Only enable for fed calls via standard endpoint. Note this will cause all XML requests to be rejected.
       See https://repose.atlassian.net/browse/REP-5101
       -->
      <filter name="saml-policy" uri-regex="^.*/v2.0/RAX-AUTH/federation/saml/auth$"/>
    </filters>

    <services>
      <service name="dist-datastore" />
    </services>
    <destinations>
      <endpoint default="true" hostname="172.17.0.1" id="identity" port="8083" protocol="http" root-path="" />
    </destinations>
  </repose-cluster>
</system-model>
